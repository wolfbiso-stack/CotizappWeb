<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generador de Cotizaciones Premium</title>

    <!-- Tailwind CSS -->
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        primary: '#1e293b',
                        secondary: '#334155',
                        accent: '#3b82f6',
                        paper: '#ffffff',
                        background: '#f1f5f9',
                    }
                }
            }
        }
    </script>

    <!-- React & ReactDOM -->
    <script crossorigin src="https://unpkg.com/react@18/umd/react.production.min.js"></script>
    <script crossorigin src="https://unpkg.com/react-dom@18/umd/react-dom.production.min.js"></script>

    <!-- Babel for JSX -->
    <script src="https://unpkg.com/@babel/standalone/babel.min.js"></script>

    <!-- Icons: Lucide -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <!-- PDF Generation -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.5.1/jspdf.umd.min.js"></script>

    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap');

        body {
            font-family: 'Inter', sans-serif;
            background-color: #f1f5f9;
        }

        .input-field {
            @apply w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-all duration-200;
        }

        .btn {
            @apply px-4 py-2 rounded-md font-medium transition-all duration-200 flex items-center gap-2;
        }
    </style>
</head>

<body>
    <div id="root"></div>

    <script type="text/babel">
        const { useState, useEffect, useRef } = React;

        // --- COMPONENTS ---

        const CompanyForm = ({ data, onChange }) => (
            <div className="bg-white p-6 rounded-xl shadow-lg border border-slate-100 transition-all hover:shadow-xl text-left">
                <h3 className="font-bold text-slate-700 mb-4 flex items-center gap-2">
                    <i data-lucide="building-2" className="w-5 h-5 text-blue-500"></i> Datos de tu Empresa
                </h3>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div className="col-span-2">
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Nombre Comercial</label>
                        <input
                            type="text"
                            placeholder="Ej. Tech Solutions S.A. de C.V."
                            value={data.name}
                            onChange={(e) => onChange('name', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-blue-300 outline-none placeholder-slate-400 font-medium"
                        />
                    </div>
                    <div>
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Teléfono</label>
                        <input
                            type="text"
                            placeholder="55 1234 5678"
                            value={data.phone}
                            onChange={(e) => onChange('phone', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-blue-300 outline-none placeholder-slate-400"
                        />
                    </div>
                    <div>
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Email</label>
                        <input
                            type="text"
                            placeholder="contacto@empresa.com"
                            value={data.email}
                            onChange={(e) => onChange('email', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-blue-300 outline-none placeholder-slate-400"
                        />
                    </div>
                    <div className="col-span-2">
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Dirección Completa</label>
                        <input
                            type="text"
                            placeholder="Av. Reforma 123, Col. Centro, CDMX"
                            value={data.address}
                            onChange={(e) => onChange('address', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-blue-300 outline-none placeholder-slate-400"
                        />
                    </div>
                    <div className="col-span-2">
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">URL del Logo (Opcional)</label>
                        <input
                            type="text"
                            placeholder="https://ejemplo.com/logo.png"
                            value={data.logo}
                            onChange={(e) => onChange('logo', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-blue-300 outline-none placeholder-slate-400"
                        />
                    </div>
                </div>
            </div>
        );

        const ClientForm = ({ data, onChange }) => (
            <div className="bg-white p-6 rounded-xl shadow-lg border border-slate-100 transition-all hover:shadow-xl text-left">
                <h3 className="font-bold text-slate-700 mb-4 flex items-center gap-2">
                    <i data-lucide="user" className="w-5 h-5 text-green-500"></i> Datos del Cliente
                </h3>
                <div className="grid grid-cols-1 md:grid-cols-2 gap-4">
                    <div className="col-span-2">
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Nombre del Cliente</label>
                        <input
                            type="text"
                            placeholder="Nombre completo o Razón Social"
                            value={data.name}
                            onChange={(e) => onChange('name', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-green-500/20 focus:border-green-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-green-300 outline-none placeholder-slate-400 font-medium"
                        />
                    </div>
                    <div>
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Teléfono</label>
                        <input
                            type="text"
                            placeholder="Teléfono de contacto"
                            value={data.phone}
                            onChange={(e) => onChange('phone', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-green-500/20 focus:border-green-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-green-300 outline-none placeholder-slate-400"
                        />
                    </div>
                    <div>
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Email</label>
                        <input
                            type="text"
                            placeholder="correo@cliente.com"
                            value={data.email}
                            onChange={(e) => onChange('email', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-green-500/20 focus:border-green-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-green-300 outline-none placeholder-slate-400"
                        />
                    </div>
                    <div className="col-span-2">
                        <label className="block text-xs font-semibold text-slate-500 mb-1 ml-1">Dirección</label>
                        <input
                            type="text"
                            placeholder="Dirección de facturación"
                            value={data.address}
                            onChange={(e) => onChange('address', e.target.value)}
                            className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-green-500/20 focus:border-green-500 block p-3 transition-all duration-200 ease-in-out hover:bg-white hover:border-green-300 outline-none placeholder-slate-400"
                        />
                    </div>
                </div>
            </div>
        );

        const ItemsTable = ({ items, onAddItem, onRemoveItem, onUpdateItem }) => {
            const calculateRowTotal = (item) => {
                const base = item.qty * item.price;
                const discountAmount = base * (item.discount / 100);
                const taxAmount = (base - discountAmount) * (item.tax / 100);
                return base - discountAmount + taxAmount;
            };

            return (
                <div className="bg-white p-6 rounded-xl shadow-lg border border-slate-100 transition-all hover:shadow-xl text-left">
                    <div className="flex justify-between items-center mb-4">
                        <h3 className="font-bold text-slate-700 flex items-center gap-2">
                            <i data-lucide="shopping-cart" className="w-5 h-5 text-indigo-500"></i> Partidas
                        </h3>
                        <button onClick={onAddItem} className="bg-indigo-600 hover:bg-indigo-700 text-white px-4 py-2 rounded-lg text-sm font-medium flex items-center gap-2 shadow-md hover:shadow-lg transition-all transform hover:-translate-y-0.5">
                            <i data-lucide="plus" className="w-4 h-4"></i> Agregar Producto
                        </button>
                    </div>
                    <div className="overflow-x-auto">
                        <table className="w-full text-sm">
                            <thead>
                                <tr className="bg-slate-50 text-slate-600">
                                    <th className="p-3 text-left rounded-l-lg">Cant.</th>
                                    <th className="p-3 text-left w-1/2">Descripción</th>
                                    <th className="p-3 text-right">Precio</th>
                                    <th className="p-3 text-center text-xs w-20">% Desc</th>
                                    <th className="p-3 text-center text-xs w-20">% IVA</th>
                                    <th className="p-3 text-center rounded-r-lg"></th>
                                </tr>
                            </thead>
                            <tbody className="divide-y divide-slate-100">
                                {items.map((item) => (
                                    <tr key={item.id} className="group hover:bg-slate-50/50 transition-colors">
                                        <td className="p-2">
                                            <input
                                                type="number"
                                                value={item.qty}
                                                onChange={(e) => onUpdateItem(item.id, 'qty', parseInt(e.target.value))}
                                                className="w-16 bg-white border border-slate-200 rounded-md p-2 text-center text-slate-700 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none transition-all shadow-sm"
                                            />
                                        </td>
                                        <td className="p-2">
                                            <input
                                                type="text"
                                                value={item.desc}
                                                onChange={(e) => onUpdateItem(item.id, 'desc', e.target.value)}
                                                className="w-full bg-white border border-slate-200 rounded-md p-2 text-slate-700 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none transition-all shadow-sm placeholder-slate-300"
                                                placeholder="Descripción del producto..."
                                            />
                                        </td>
                                        <td className="p-2">
                                            <div className="relative">
                                                <span className="absolute left-2 top-2 text-slate-400">$</span>
                                                <input
                                                    type="number"
                                                    value={item.price}
                                                    onChange={(e) => onUpdateItem(item.id, 'price', parseFloat(e.target.value))}
                                                    className="w-24 bg-white border border-slate-200 rounded-md p-2 pl-6 text-right text-slate-700 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none transition-all shadow-sm"
                                                />
                                            </div>
                                        </td>
                                        <td className="p-2">
                                            <input
                                                type="number"
                                                value={item.discount}
                                                onChange={(e) => onUpdateItem(item.id, 'discount', parseFloat(e.target.value))}
                                                className="w-full bg-white border border-slate-200 rounded-md p-2 text-center text-slate-700 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none transition-all shadow-sm"
                                            />
                                        </td>
                                        <td className="p-2">
                                            <input
                                                type="number"
                                                value={item.tax}
                                                onChange={(e) => onUpdateItem(item.id, 'tax', parseFloat(e.target.value))}
                                                className="w-full bg-white border border-slate-200 rounded-md p-2 text-center text-slate-700 focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 outline-none transition-all shadow-sm"
                                            />
                                        </td>
                                        <td className="p-2 text-center">
                                            <button
                                                onClick={() => onRemoveItem(item.id)}
                                                className="text-slate-400 hover:text-red-500 hover:bg-red-50 p-2 rounded-full transition-all"
                                                title="Eliminar partida"
                                            >
                                                <i data-lucide="trash-2" className="w-4 h-4"></i>
                                            </button>
                                        </td>
                                    </tr>
                                ))}
                            </tbody>
                        </table>
                    </div>
                </div>
            );
        };

        const TermsInput = ({ value, onChange }) => (
            <div className="bg-white p-6 rounded-xl shadow-lg border border-slate-100 transition-all hover:shadow-xl text-left">
                <h3 className="font-bold text-slate-700 mb-4 flex items-center gap-2">
                    <i data-lucide="file-text" className="w-5 h-5 text-gray-500"></i> Términos y Condiciones
                </h3>
                <label className="block text-xs font-semibold text-slate-500 mb-2 ml-1">Escribe los términos legales, garantías o notas adicionales</label>
                <textarea
                    value={value}
                    onChange={(e) => onChange(e.target.value)}
                    className="w-full bg-slate-50 border border-slate-200 text-slate-800 text-sm rounded-lg focus:ring-2 focus:ring-gray-500/20 focus:border-gray-500 block p-4 transition-all duration-200 ease-in-out hover:bg-white hover:border-gray-300 outline-none placeholder-slate-400 h-32 leading-relaxed"
                    placeholder="• Garantía de servicio...&#10;• Tiempos de entrega...&#10;• Condiciones de pago..."
                ></textarea>
            </div>
        );

        // --- PDF PREVIEW COMPONENT ---
        const PrintableQuotation = ({ company, client, items, terms, date, folio = "001", dueDate }) => {
            const subtotal = items.reduce((acc, item) => acc + (item.qty * item.price), 0);
            const totalDiscount = items.reduce((acc, item) => acc + (item.qty * item.price * (item.discount / 100)), 0);

            // Tax calculation (simple version for display consistency)
            const totalTax = items.reduce((acc, item) => {
                const base = item.qty * item.price;
                const discountAmount = base * (item.discount / 100);
                return acc + ((base - discountAmount) * (item.tax / 100));
            }, 0);

            const grandTotal = subtotal - totalDiscount + totalTax;

            // Default dates if missing
            const validDate = date || new Date().toLocaleDateString();
            const validDueDate = dueDate || new Date(Date.now() + 15 * 24 * 60 * 60 * 1000).toLocaleDateString();

            return (
                <div className="bg-white max-w-[900px] mx-auto text-gray-800 relative shadow-none" style={{ width: '900px', minHeight: '1100px' }}>

                    {/* Top Gradient Bar */}
                    <div className="h-4 w-full bg-gradient-to-r from-blue-600 via-purple-500 to-purple-600"></div>

                    <div className="pt-12 px-12 pb-0 flex flex-col h-full justify-between">
                        <div>
                            {/* Header Section */}
                            <div className="flex justify-between items-start mb-16">
                                {/* Company Info (Left) */}
                                <div className="flex gap-6 items-start w-7/12">
                                    {company.logo ? (
                                        <img src={company.logo} alt="Logo" className="w-20 h-20 object-contain rounded-md" />
                                    ) : (
                                        <div className="w-20 h-20 bg-blue-50 rounded-md flex items-center justify-center text-blue-500">
                                            <i data-lucide="building-2" className="w-10 h-10"></i>
                                        </div>
                                    )}
                                    <div>
                                        <h1 className="text-3xl font-bold text-slate-800 mb-1 leading-tight">
                                            {company.name || "NOMBRE EMPRESA"}
                                        </h1>
                                        <div className="text-sm text-gray-500 space-y-1">
                                            <p>{company.address || "Dirección de la empresa, Ciudad, Estado"}</p>
                                            <p>{company.email}</p>
                                            <p>{company.phone}</p>
                                        </div>
                                    </div>
                                </div>

                                {/* Quotation Details (Right) */}
                                <div className="text-right w-5/12">
                                    <h2 className="text-2xl font-bold text-gray-700 uppercase tracking-widest mb-6">COTIZACIÓN</h2>
                                    <div className="space-y-2 text-sm">
                                        <div className="flex justify-end gap-8">
                                            <span className="font-bold text-gray-500">Folio:</span>
                                            <span className="font-bold text-gray-900">#{folio}</span>
                                        </div>
                                        <div className="flex justify-end gap-8">
                                            <span className="font-bold text-gray-500">Fecha:</span>
                                            <span className="text-gray-700">{validDate}</span>
                                        </div>
                                        <div className="flex justify-end gap-8">
                                            <span className="font-bold text-gray-500">Vence:</span>
                                            <span className="text-gray-700">{validDueDate}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            {/* Client Section */}
                            <div className="mb-12 bg-slate-50 py-8 -mx-12 px-12 border-y border-gray-100/50">
                                <h3 className="text-xs font-bold text-gray-400 uppercase tracking-widest mb-2">COTIZACIÓN PARA:</h3>
                                <div className="text-gray-800">
                                    <p className="text-2xl font-bold text-slate-800 mb-1">{client.name || "Nombre del Cliente"}</p>
                                    <p className="text-gray-600">{client.address}</p>
                                    <div className="text-gray-500 mt-1 flex gap-4 text-sm">
                                        {client.phone && <span>Tel: {client.phone}</span>}
                                        {client.email && <span>Email: {client.email}</span>}
                                    </div>
                                </div>
                            </div>

                            {/* Items Table */}
                            <div className="mb-12">
                                <table className="w-full">
                                    <thead>
                                        <tr className="border-b border-gray-100">
                                            <th className="text-left py-4 text-xs font-bold text-gray-400 uppercase tracking-widest w-16">Cant.</th>
                                            <th className="text-left py-4 text-xs font-bold text-gray-400 uppercase tracking-widest">Descripción / Producto</th>
                                            <th className="text-right py-4 text-xs font-bold text-gray-400 uppercase tracking-widest w-32">Precio Unit.</th>
                                            <th className="text-right py-4 text-xs font-bold text-gray-400 uppercase tracking-widest w-32">Importe</th>
                                        </tr>
                                    </thead>
                                    <tbody className="divide-y divide-gray-50">
                                        {items.map((item, idx) => {
                                            const total = (item.qty * item.price) - (item.qty * item.price * (item.discount || 0) / 100);
                                            return (
                                                <tr key={idx}>
                                                    <td className="py-5 text-sm font-medium text-gray-500 align-top">{item.qty}</td>
                                                    <td className="py-5 pr-4 align-top">
                                                        <p className="font-bold text-slate-800 text-sm mb-1">{item.desc}</p>
                                                        {(item.discount > 0 || item.tax > 0) && (
                                                            <p className="text-xs text-blue-500">
                                                                {item.discount > 0 && `Desc. ${item.discount}% `}
                                                                {item.tax > 0 && `+ IVA ${item.tax}%`}
                                                            </p>
                                                        )}
                                                    </td>
                                                    <td className="py-5 text-right text-sm text-gray-600 align-top">${item.price.toFixed(2)}</td>
                                                    <td className="py-5 text-right text-sm font-bold text-slate-700 align-top">${total.toFixed(2)}</td>
                                                </tr>
                                            );
                                        })}
                                    </tbody>
                                </table>
                            </div>
                        </div>

                        {/* Footer Section: Terms & Totals split */}
                        <div className="bg-slate-50 -mx-12 px-12 pt-10 pb-12 mt-auto border-t border-gray-100">
                            <div className="flex items-start justify-between">
                                {/* Left: Terms & Signature */}
                                <div className="w-7/12 pr-12">
                                    {terms && (
                                        <div className="mb-12">
                                            <h4 className="font-bold text-slate-700 text-sm mb-3">Términos y Condiciones</h4>
                                            <div className="text-xs text-gray-500 leading-relaxed whitespace-pre-line">
                                                {terms}
                                            </div>
                                        </div>
                                    )}

                                    <div className="mt-8">
                                        <p className="text-xs text-gray-400 mb-1">Gracias por su confianza.</p>
                                        <p className="text-sm font-bold text-blue-600">Atte. {company.name || "Nuestra Empresa"}</p>
                                    </div>
                                </div>

                                {/* Right: Totals */}
                                <div className="w-5/12 pl-8">
                                    <div className="space-y-3 text-right">
                                        <div className="flex justify-between text-sm text-gray-500">
                                            <span>Subtotal:</span>
                                            <span className="font-medium text-gray-700">${subtotal.toFixed(2)}</span>
                                        </div>

                                        {totalDiscount > 0 && (
                                            <div className="flex justify-between text-sm text-green-600">
                                                <span>Descuento:</span>
                                                <span>-${totalDiscount.toFixed(2)}</span>
                                            </div>
                                        )}

                                        {totalTax > 0 && (
                                            <div className="flex justify-between text-sm text-gray-500">
                                                <span>IVA / Impuestos:</span>
                                                <span className="font-medium text-gray-700">${totalTax.toFixed(2)}</span>
                                            </div>
                                        )}

                                        <div className="flex justify-between items-center pt-4 mt-4 border-t border-gray-200">
                                            <span className="text-lg font-bold text-slate-800">Total:</span>
                                            <span className="text-2xl font-bold text-blue-600">${grandTotal.toFixed(2)}</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            );
        };


        // --- LOGIN COMPONENT ---
        const Login = ({ onLogin }) => {
            const [email, setEmail] = useState('');
            const [password, setPassword] = useState('');
            const [loading, setLoading] = useState(false);

            useEffect(() => {
                lucide.createIcons();
            }, []);

            const handleSubmit = (e) => {
                e.preventDefault();
                setLoading(true);
                // Simulate network request for visual demo
                setTimeout(() => {
                    setLoading(false);
                    onLogin(email, password);
                }, 1500);
            };

            return (
                <div className="min-h-screen bg-slate-50 flex items-center justify-center p-4">
                    <div className="bg-white rounded-2xl shadow-xl w-full max-w-md overflow-hidden border border-slate-100">
                        {/* Header */}
                        <div className="bg-gradient-to-r from-blue-600 to-blue-700 p-8 text-center">
                            <div className="w-16 h-16 bg-white/20 backdrop-blur-sm rounded-xl flex items-center justify-center mx-auto mb-4 text-white">
                                <i data-lucide="zap" className="w-8 h-8"></i>
                            </div>
                            <h2 className="text-2xl font-bold text-white mb-1">SmartQuote</h2>
                            <p className="text-blue-100 text-sm">Tu aliado en cotizaciones profesionales</p>
                        </div>

                        {/* Form */}
                        <div className="p-8">
                            <form onSubmit={handleSubmit} className="space-y-5">
                                <div className="space-y-1">
                                    <label className="text-sm font-semibold text-slate-600">Correo Electrónico</label>
                                    <div className="relative">
                                        <i data-lucide="mail" className="absolute left-3 top-3.5 w-5 h-5 text-slate-400"></i>
                                        <input
                                            type="email"
                                            required
                                            className="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 text-slate-800 transition-all outline-none font-medium"
                                            placeholder="hola@ejemplo.com"
                                            value={email}
                                            onChange={e => setEmail(e.target.value)}
                                        />
                                    </div>
                                </div>

                                <div className="space-y-1">
                                    <div className="flex justify-between items-center">
                                        <label className="text-sm font-semibold text-slate-600">Contraseña</label>
                                        <a href="#" className="text-xs text-blue-600 hover:text-blue-700 font-medium hover:underline">¿Olvidaste tu contraseña?</a>
                                    </div>
                                    <div className="relative">
                                        <i data-lucide="lock" className="absolute left-3 top-3.5 w-5 h-5 text-slate-400"></i>
                                        <input
                                            type="password"
                                            required
                                            className="w-full pl-10 pr-4 py-3 bg-slate-50 border border-slate-200 rounded-lg focus:ring-2 focus:ring-blue-500/20 focus:border-blue-500 text-slate-800 transition-all outline-none font-medium"
                                            placeholder="••••••••"
                                            value={password}
                                            onChange={e => setPassword(e.target.value)}
                                        />
                                    </div>
                                </div>

                                <button
                                    type="submit"
                                    disabled={loading}
                                    className={`w-full bg-blue-600 hover:bg-blue-700 text-white font-bold py-3 rounded-lg shadow-lg shadow-blue-500/30 transition-all transform hover:-translate-y-0.5 flex items-center justify-center gap-2 ${loading ? 'opacity-70 cursor-wait' : ''}`}
                                >
                                    {loading ? (
                                        <>
                                            <i data-lucide="loader-2" className="w-5 h-5 animate-spin"></i>
                                            Iniciando Sesión...
                                        </>
                                    ) : (
                                        <>
                                            <i data-lucide="log-in" className="w-5 h-5"></i>
                                            Iniciar Sesión
                                        </>
                                    )}
                                </button>
                            </form>
                        </div>
                        <div className="bg-slate-50 p-4 text-center border-t border-slate-100">
                            <p className="text-xs text-slate-500">
                                ¿No tienes una cuenta? <a href="#" className="text-blue-600 font-bold hover:underline">Regístrate aquí</a>
                            </p>
                        </div>
                    </div>
                </div>
            );
        };


        // --- SIDEBAR COMPONENT ---
        const Sidebar = ({ activeTab, setActiveTab }) => {
            const [expanded, setExpanded] = useState(false);

            const navItems = [
                { id: 'cotizaciones', label: 'Cotizaciones', icon: 'file-text' },
                { id: 'clientes', label: 'Clientes', icon: 'users' },
                { id: 'contratos', label: 'Contratos', icon: 'scroll-text' },
            ];

            return (
                <div
                    className={`fixed left-0 top-0 h-full bg-white text-slate-800 shadow-xl border-r border-gray-200 transition-all duration-300 z-50 flex flex-col justify-between ${expanded ? 'w-64' : 'w-20'}`}
                    onMouseEnter={() => setExpanded(true)}
                    onMouseLeave={() => setExpanded(false)}
                >
                    {/* Top Section */}
                    <div>
                        {/* Logo */}
                        <div className="h-16 flex items-center justify-center border-b border-gray-100 relative">
                            <div className="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center text-white shrink-0">
                                <i data-lucide="zap" className="w-6 h-6"></i>
                            </div>
                            <div className={`ml-3 font-bold text-xl tracking-tight whitespace-nowrap overflow-hidden transition-all duration-300 ${expanded ? 'opacity-100 w-auto' : 'opacity-0 w-0'}`}>
                                SmartQuote
                            </div>
                        </div>

                        {/* Navigation */}
                        <nav className="mt-8 flex flex-col gap-2 px-3">
                            {navItems.map((item) => (
                                <button
                                    key={item.id}
                                    onClick={() => setActiveTab(item.id)}
                                    className={`flex items-center p-3 rounded-lg transition-all duration-200 group ${activeTab === item.id ? 'bg-blue-50 text-blue-600 font-bold' : 'text-slate-500 hover:bg-gray-50 hover:text-slate-900'}`}
                                >
                                    <div className="w-6 h-6 flex items-center justify-center shrink-0">
                                        <i data-lucide={item.icon} className={`w-5 h-5 ${activeTab === item.id ? 'text-blue-600' : 'text-slate-500 group-hover:text-slate-900'}`}></i>
                                    </div>
                                    <span className={`ml-3 font-medium whitespace-nowrap overflow-hidden transition-all duration-300 ${expanded ? 'opacity-100 w-auto' : 'opacity-0 w-0'}`}>
                                        {item.label}
                                    </span>
                                    {!expanded && activeTab === item.id && (
                                        <div className="absolute left-16 w-1 h-8 bg-blue-600 rounded-r-full"></div>
                                    )}
                                </button>
                            ))}
                        </nav>
                    </div>

                    {/* Bottom Section */}
                    <div className="border-t border-gray-100 p-3 bg-gray-50">
                        {/* Settings */}
                        <button className="flex items-center p-3 rounded-lg text-slate-500 hover:bg-white hover:text-slate-900 transition-all duration-200 mb-2 w-full hover:shadow-sm">
                            <div className="w-6 h-6 flex items-center justify-center shrink-0">
                                <i data-lucide="settings" className="w-5 h-5"></i>
                            </div>
                            <span className={`ml-3 font-medium whitespace-nowrap overflow-hidden transition-all duration-300 ${expanded ? 'opacity-100 w-auto' : 'opacity-0 w-0'}`}>
                                Configuración
                            </span>
                        </button>

                        {/* User Profile */}
                        <div className="flex items-center p-2 rounded-lg bg-white border border-gray-200 mt-2 shadow-sm">
                            <img src="https://ui-avatars.com/api/?name=Admin+User&background=eff6ff&color=3b82f6" alt="User" className="w-10 h-10 rounded-full border border-gray-100 shrink-0" />
                            <div className={`ml-3 overflow-hidden transition-all duration-300 ${expanded ? 'opacity-100 w-32' : 'opacity-0 w-0'}`}>
                                <p className="text-sm font-bold text-slate-800 truncate">Usuario Admin</p>
                                <p className="text-xs text-slate-500 truncate">admin@empresa.com</p>
                            </div>
                        </div>
                    </div>
                </div>
            );
        };


        // --- MAIN APP ---

        const App = () => {
            // State
            const [isAuthenticated, setIsAuthenticated] = useState(false);
            const [activeTab, setActiveTab] = useState('cotizaciones');
            const [company, setCompany] = useState({ name: '', phone: '', email: '', address: '', logo: '' });
            const [client, setClient] = useState({ name: '', phone: '', email: '', address: '' });
            const [items, setItems] = useState([{ id: 1, qty: 1, desc: 'Ej. Servicio de Consultoría', price: 100, discount: 0, tax: 0 }]);
            const [terms, setTerms] = useState('');

            // Login Handler
            const handleLogin = (email, password) => {
                console.log("Login with:", email); // Future: Validate with Supabase
                setIsAuthenticated(true);
            };

            // New State: Folio
            const [folio, setFolio] = useState(() => {
                const saved = localStorage.getItem('lastFolio');
                return saved ? String(parseInt(saved) + 1).padStart(3, '0') : '100';
            });

            const [isGenerating, setIsGenerating] = useState(false);

            // Load saved Company Data on mount
            useEffect(() => {
                const savedCompany = localStorage.getItem('companyData');
                if (savedCompany) setCompany(JSON.parse(savedCompany));

                const savedTerms = localStorage.getItem('defaultTerms');
                // Default bullet points if empty to match screenshot style suggestion
                if (savedTerms) {
                    setTerms(savedTerms);
                } else {
                    setTerms("• 1 año de Garantía en todos los componentes.\n• Instalación en Domicilio Incluida.\n• Windows 11 y paquetería Office Incluida.");
                }
            }, []);

            // Save Company Data on change
            useEffect(() => {
                localStorage.setItem('companyData', JSON.stringify(company));
            }, [company]);

            // Save Terms on change
            useEffect(() => {
                localStorage.setItem('defaultTerms', terms);
            }, [terms]);

            // Preview Scaling Logic
            const previewContainerRef = useRef(null);
            const quotationRef = useRef(null);
            const [previewScale, setPreviewScale] = useState(1);
            const [previewHeight, setPreviewHeight] = useState('auto');

            useEffect(() => {
                const updateDimensions = () => {
                    if (previewContainerRef.current && quotationRef.current) {
                        const containerWidth = previewContainerRef.current.offsetWidth;
                        const targetWidth = 900; // Fixed width of Quotation

                        // Calculate Scale
                        // If container is smaller than target, scale down. If larger, keep 1 (or scale up if desired, but usually 1 max is safer for print preview fidelity)
                        const scale = containerWidth < targetWidth ? containerWidth / targetWidth : 1;
                        setPreviewScale(scale);

                        // Calculate Height based on the scaled content
                        // The inner content has a fixed width of 900px and grows vertically.
                        // We need the bounding height of that inner content.
                        const contentHeight = quotationRef.current.offsetHeight;

                        // Add a small buffer just in case
                        setPreviewHeight(`${contentHeight * scale}px`);
                    }
                };

                // Initial calculation
                updateDimensions();

                // Listen for window resize
                window.addEventListener('resize', updateDimensions);

                // Create a ResizeObserver for the container to handle layout shifts (e.g. sidebar toggle)
                const resizeObserver = new ResizeObserver(() => {
                    updateDimensions();
                });

                if (previewContainerRef.current) {
                    resizeObserver.observe(previewContainerRef.current);
                }

                // Try to update periodically in case of image loads or late renders (temporary fallback)
                // A better way is to pass content changes as dependencies if we wrapped this in useCallback,
                // but since this is inside useEffect, we want to run it when critical data changes.
                // We'll separate the sizing function.

                return () => {
                    window.removeEventListener('resize', updateDimensions);
                    resizeObserver.disconnect();
                };
            }, [activeTab]); // Depend on activeTab so it recalculates when showing the view

            // Effect to trigger updates when content changes
            useEffect(() => {
                // Trigger a resize calculation when items or terms change
                // We re-use the logic by dispatching a resize event or just waiting for the next render cycle
                // But since we can't easily access updateDimensions from here without refactoring,
                // let's refactor slightly to expose a trigger.

                // Simpler: Just rely on the fact that if DOM updates, we might want to check.
                // Actually, let's just copy the logic briefly or use a ref wrapper for the updater?
                // No, standard way:

                const timer = setTimeout(() => {
                    if (previewContainerRef.current && quotationRef.current) {
                        const containerWidth = previewContainerRef.current.offsetWidth;
                        const targetWidth = 900;
                        const scale = containerWidth < targetWidth ? containerWidth / targetWidth : 1;
                        setPreviewScale(scale);
                        setPreviewHeight(`${quotationRef.current.offsetHeight * scale}px`);
                    }
                }, 50); // Small delay to allow DOM render
                return () => clearTimeout(timer);
            }, [items, terms, company, client, activeTab, isAuthenticated]); // Dependencies that change content size

            // Handlers
            const updateCompany = (field, value) => setCompany(prev => ({ ...prev, [field]: value }));
            const updateClient = (field, value) => setClient(prev => ({ ...prev, [field]: value }));

            const addItem = () => setItems([...items, { id: Date.now(), qty: 1, desc: '', price: 0, discount: 0, tax: 0 }]);
            const removeItem = (id) => setItems(items.filter(i => i.id !== id));
            const updateItem = (id, field, value) => {
                setItems(items.map(i => i.id === id ? { ...i, [field]: value } : i));
            };

            const generatePDF = async () => {
                setIsGenerating(true);
                // Simulate wait for render if needed, but here we just grab the element
                // Simulate wait for render if needed, but here we just grab the element
                setTimeout(async () => {
                    const element = document.getElementById('quotation-pdf-export');
                    if (!element) return;

                    try {
                        const canvas = await html2canvas(element, {
                            scale: 2,
                            useCORS: true, // Important for external images if supported
                            logging: false
                        });
                        const imgData = canvas.toDataURL('image/png');
                        const pdf = new jspdf.jsPDF('p', 'mm', 'a4');

                        const pdfWidth = pdf.internal.pageSize.getWidth();
                        const pdfHeight = (canvas.height * pdfWidth) / canvas.width;

                        pdf.addImage(imgData, 'PNG', 0, 0, pdfWidth, pdfHeight);
                        pdf.save(`Cotizacion_${client.name.replace(/\s+/g, '_') || 'Cliente'}.pdf`);

                        // Increment Folio on success
                        const nextFolio = String(parseInt(folio) + 1).padStart(3, '0');
                        setFolio(nextFolio);
                        localStorage.setItem('lastFolio', folio); // Save current as last used, or logic preference

                    } catch (err) {
                        console.error('Error generating PDF:', err);
                        alert('Hubo un error al generar el PDF. Verifica que la imagen del logo (si usaste una) permita acceso CORS.');
                    }
                    setIsGenerating(false);
                }, 100);
            };

            // Setup Icons
            useEffect(() => {
                lucide.createIcons();
            }, [items, activeTab, isAuthenticated]); // Re-run when items, tab or auth state changes

            if (!isAuthenticated) {
                return <Login onLogin={handleLogin} />;
            }

            return (
                <div className="min-h-screen bg-slate-50 flex">
                    {/* Floating Sidebar */}
                    <Sidebar activeTab={activeTab} setActiveTab={setActiveTab} />

                    {/* Main Content Area - Pushed by Sidebar (w-20 space) */}
                    <div className="flex-1 ml-20 transition-all duration-300">
                        {activeTab === 'cotizaciones' && (
                            <div className="w-full px-4 md:px-8 py-8 pb-20">
                                {/* Header Controls */}
                                <div className="flex flex-col md:flex-row justify-between items-center mb-8 gap-4 border-b pb-6">
                                    <div>
                                        <h1 className="text-3xl font-extrabold text-slate-800 tracking-tight">
                                            Generador de <span className="text-blue-600">Cotizaciones</span>
                                        </h1>
                                        <p className="text-gray-500 mt-1">Crea documentos profesionales en segundos.</p>
                                    </div>
                                    <button
                                        onClick={generatePDF}
                                        disabled={isGenerating}
                                        className={`btn bg-blue-600 text-white hover:bg-blue-700 shadow-lg shadow-blue-500/30 transform hover:-translate-y-0.5 ${isGenerating ? 'opacity-50 cursor-not-allowed' : ''}`}
                                    >
                                        <i data-lucide={isGenerating ? "loader-2" : "file-down"}></i>
                                        {isGenerating ? 'Generando PDF...' : 'Descargar Cotización PDF'}
                                    </button>
                                </div>

                                <div className="grid grid-cols-1 lg:grid-cols-12 gap-8">
                                    {/* Editor Column: Now wider (7 cols) */}
                                    <div className="lg:col-span-7 space-y-6">
                                        <CompanyForm data={company} onChange={updateCompany} />
                                        <ClientForm data={client} onChange={updateClient} />
                                        <ItemsTable items={items} onAddItem={addItem} onRemoveItem={removeItem} onUpdateItem={updateItem} />
                                        <TermsInput value={terms} onChange={setTerms} />
                                    </div>

                                    {/* Preview Column: Now narrower (5 cols) */}
                                    <div className="lg:col-span-5" ref={previewContainerRef}>
                                        <div className="sticky top-8">
                                            <div className="bg-gray-200 p-1 rounded-t-lg flex items-center gap-2 px-4 py-2 text-xs font-semibold text-gray-500 uppercase tracking-widest">
                                                <i data-lucide="eye" className="w-3 h-3"></i> Vista Previa del Documento
                                            </div>
                                            <div className="border-4 border-gray-200 rounded-b-lg shadow-2xl overflow-hidden bg-gray-500/5" style={{ height: previewHeight, transition: 'all 0.3s ease-out' }}>
                                                {/* Scaled Wrapper */}
                                                <div
                                                    ref={quotationRef}
                                                    style={{
                                                        transform: `scale(${previewScale})`,
                                                        transformOrigin: 'top left',
                                                        width: '900px',
                                                        // Force hardware acceleration for crisp text
                                                        willChange: 'transform'
                                                    }}
                                                >
                                                    <PrintableQuotation
                                                        company={company}
                                                        client={client}
                                                        items={items}
                                                        terms={terms}
                                                        folio={`COT-2026-${folio}`}
                                                        date={new Date().toLocaleDateString()}
                                                        dueDate={new Date(Date.now() + 15 * 24 * 60 * 60 * 1000).toLocaleDateString()}
                                                    />
                                                </div>
                                            </div>
                                            <p className="text-center text-gray-400 text-sm mt-4">
                                                * Este diseño exacto será el que se exporte a PDF.
                                            </p>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        )}

                        {activeTab === 'clientes' && (
                            <div className="w-full h-full flex items-center justify-center text-gray-400 flex-col">
                                <i data-lucide="users" className="w-24 h-24 mb-4 opacity-50"></i>
                                <h2 className="text-2xl font-bold">Módulo de Clientes</h2>
                                <p>Próximamente</p>
                            </div>
                        )}

                        {activeTab === 'contratos' && (
                            <div className="w-full h-full flex items-center justify-center text-gray-400 flex-col">
                                <i data-lucide="scroll-text" className="w-24 h-24 mb-4 opacity-50"></i>
                                <h2 className="text-2xl font-bold">Módulo de Contratos</h2>
                                <p>Próximamente</p>
                            </div>
                        )}
                    </div>

                    {/* Hidden Container for PDF Export - Absolute position off-screen to ensure completely clean render without transforms */}
                    <div style={{ position: 'absolute', left: '-9999px', top: 0 }}>
                        <div id="quotation-pdf-export">
                            <PrintableQuotation
                                company={company}
                                client={client}
                                items={items}
                                terms={terms}
                                folio={`COT-2026-${folio}`}
                                date={new Date().toLocaleDateString()}
                                dueDate={new Date(Date.now() + 15 * 24 * 60 * 60 * 1000).toLocaleDateString()}
                            />
                        </div>
                    </div>
                </div>
            );
        };

        const root = ReactDOM.createRoot(document.getElementById('root'));
        root.render(<App />);
    </script>
</body>

</html>